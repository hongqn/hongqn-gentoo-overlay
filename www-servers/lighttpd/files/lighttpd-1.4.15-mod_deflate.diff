+{ '\037', '\213', Z_DEFLATED, 0,
+  0, 0, 0, 0, /* mtime */
+  0, 0x03 /* Unix OS_CODE */
+};
+static int stream_deflate_init(server *srv, connection *con, handler_ctx *hctx) {
