+			bz->avail_out = hctx->output->size;
+		}
+	} while (bz->avail_in > 0);
+	if(p->conf.debug) {
+		log_error_write(srv, __FILE__, __LINE__, "sdsd",
+				"compress: in=", in, ", out=", out);
+	}
+	return 0;
+}
