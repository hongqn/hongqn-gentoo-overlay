+	z->zfree = Z_NULL;
+	z->opaque = Z_NULL;
+	z->total_in = 0;
+	z->total_out = 0;
+	z->next_out = NULL;
+	z->avail_out = 0;
+	
+	if(p->conf.debug) {
+		log_error_write(srv, __FILE__, __LINE__, "sd", 
+			"output-buffer-size:", p->conf.output_buffer_size);
+		log_error_write(srv, __FILE__, __LINE__, "sd", 
